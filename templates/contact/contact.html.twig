{% extends 'base.html.twig' %}

{% block title %}Nous contacter
{% endblock %}

{% block body_id 'contact' %}

{% block header %}
	{{ include("/partials/_navbar.html.twig",{ value:'contact'}) }}
{% endblock %}

{% block main %}
	{#    {{ include('/partials/_carousel.html.twig',{imageName:imgCar,textCarousel:(imgDesc|striptags)}) }}#}
	<div id="carousel_contact"></div>
	<div class="container-fluid py-5">
		<div class="container">
			<div class="row align-items-end mb-4">
				<div class="col-lg-6">
					<h6 class="text-secondary font-weight-semi-bold text-uppercase mb-3">Contact Us</h6>
					<h1 class="section-title mb-3">Contact Us For Cleaning Services</h1>
				</div>
				<div class="col-lg-6">
					<h5 class="font-weight-normal text-muted mb-3">We are glad that you take touch with us.</h5>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-7 mb-5 mb-lg-0">

					<div id="message_root" data-username="{{ app.user ? app.user.firstName ~ " " ~ app.user.lastName: "" }}" data-email="{{ app.user ? app.user.email: "" }}"></div>


				</div>
				<div class="col-lg-5" style="min-height: 400px;">
					<div class="position-relative h-100 rounded overflow-hidden">
						<iframe style="width: 100%; height: 100%; objectFit: cover;" src="https://maps.google.com/maps?q=orange%20madagascar&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('contact_js_manager') }}
{% endblock %}
